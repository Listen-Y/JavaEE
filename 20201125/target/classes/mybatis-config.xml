<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    
    <settings>
        <setting name="logImpl" value="STDOUT_LOGGING"/>
    </settings>

    <!--别名绑定实体类-->
    <typeAliases>
        <package name="com.employee.pojo"/>
    </typeAliases>

    <!--绑定实体的mapper接口-->
    <mappers>
        <mapper class="com.employee.dao.EmployeeMapper"/>
        <mapper class="com.employee.dao.AdminMapper"/>
    </mappers>
</configuration>